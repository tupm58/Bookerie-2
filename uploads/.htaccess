Options -Indexes -ExecCGI
RemoveHandler .php .phtml .php3 .php4
RemoveType .php .phtml .php3 .php4
php_flag engine off
<Files .htaccess>
	order deny,allow
	deny from all
</Files>
<FilesMatch .*>
	order deny,allow
	deny from all
</FilesMatch>
<FilesMatch "\.(gif|jpeg|png|svg|swf|jpg)$">
	Order deny,allow
	Allow from all
</FilesMatch>